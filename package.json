{
  "name": "talos",
  "version": "1.0.0",
  "description": "Talos CI is a webhook based application that is mainly focused on providing some extensions to existing platforms and automation for some events.",
  "scripts": {
    "start": "node build/Entrypoint.js",
    "build": "tsc",
    "test": "nyc mocha --timeout=3000 --ui tdd --require ts-node/register tests/**/*.test.ts",
    "prettier:base": "prettier --parser typescript",
    "prettier:check": "npm run prettier:base --list-different \"src/**/*{ts,tsx}\"",
    "prettier:write": "npm run prettier:base --write \"src/**/*{ts,tsx}\"",
    "precommit": "npm run prettier:write"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.1",
    "@types/node": "^12.7.4",
    "@types/yaml": "^1.2.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "gitlab": "^11.0.2",
    "talos-approve": "^0.1.0",
    "talos-blunderbuss": "^0.1.0",
    "talos-caturday": "^1.0.2",
    "talos-gitlab-client": "^1.0.7",
    "talos-lgtm": "^0.1.0",
    "talos-testrunner": "^0.1.0",
    "talos-welcome": "^0.1.2",
    "typescript": "^3.6.2",
    "yaml": "^1.6.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "husky": "^1.3.1",
    "mocha": "^5.2.0",
    "nyc": "^14.1.1",
    "prettier": "^1.15.3",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.3.0"
  }
}
